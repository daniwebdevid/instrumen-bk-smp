---
// src/components/LikertRow.astro
interface Props {
    // Teks pertanyaan Likert
    soal: string;
    // ID unik (name="") untuk grup radio button
    name_id: string; 
    // Nomor urut pertanyaan di dalam satu area (misal: 2.1, 2.2, dll.)
    nomor: string;
}

const { soal, name_id, nomor } = Astro.props;
---

<div class="grid grid-cols-1 sm:grid-cols-5 border-b border-gray-200 last:border-b-0">
    
    <div class="col-span-1 p-3 font-medium text-gray-800 sm:border-r border-gray-200">
        <span class="font-bold text-blue-700 mr-2">{nomor}.</span>{soal}
    </div>
    
    <div class="col-span-1 sm:col-span-4 grid grid-cols-4 divide-x divide-gray-200 bg-gray-50/50">
        
        <label class="p-3 flex items-center justify-center cursor-pointer hover:bg-red-50 transition group">
            <input type="radio" name={name_id} value="1" required 
                   class="form-radio h-5 w-5 text-red-600 focus:ring-red-500/50 focus:ring-2">
            <span class="ml-2 sm:hidden text-xs font-semibold text-red-600">TP</span>
        </label>
        
        <label class="p-3 flex items-center justify-center cursor-pointer hover:bg-yellow-50 transition group">
            <input type="radio" name={name_id} value="2" required 
                   class="form-radio h-5 w-5 text-yellow-600 focus:ring-yellow-500/50 focus:ring-2">
            <span class="ml-2 sm:hidden text-xs font-semibold text-yellow-600">Jarang</span>
        </label>
        
        <label class="p-3 flex items-center justify-center cursor-pointer hover:bg-blue-50 transition group">
            <input type="radio" name={name_id} value="3" required 
                   class="form-radio h-5 w-5 text-blue-600 focus:ring-blue-500/50 focus:ring-2">
            <span class="ml-2 sm:hidden text-xs font-semibold text-blue-600">Sering</span>
        </label>
        
        <label class="p-3 flex items-center justify-center cursor-pointer hover:bg-green-50 transition group">
            <input type="radio" name={name_id} value="4" required 
                   class="form-radio h-5 w-5 text-green-600 focus:ring-green-500/50 focus:ring-2">
            <span class="ml-2 sm:hidden text-xs font-semibold text-green-600">Selalu</span>
        </label>
    </div>
    
</div>